{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Grouping control allowing to group controls without any significant changes in the layout. Allows to hide whole group of controls with single visibility condition.",
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "group"
      ]
    },
    "name": {
      "type": "string"
    },
    "controls": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "$ref": "checkbox.json#"
          },
          { "$ref": "columns.json#" },
          { "$ref": "combo.json#" },
          { "$ref": "date.json#" },
          { "$ref": "datetime.json#" },
          { "$ref": "label.json#" },
          { "$ref": "money.json#" },
          { "$ref": "number.json#" },
          { "$ref": "radio.json#" },
          { "$ref": "separator.json#" },
          { "$ref": "tabs.json#" },
          { "$ref": "text.json#" },
          { "$ref": "textarea.json#" }
        ]
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "visibility": {
          "$ref": "../property/constraints.json#/$defs/constraint"
        }
      }
    }
  },
  "required": [
    "type",
    "name",
    "controls"
  ]
}