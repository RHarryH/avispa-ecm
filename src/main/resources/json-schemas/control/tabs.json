{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Grouping control used to group controls in a clickable tabs. There is no possibility to hide single tab.",
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "tabs"
      ]
    },
    "label": {
      "type": "string"
    },
    "tabs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "controls": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "oneOf": [
                { "$ref": "columns.json#" },
                { "$ref": "combo.json#" },
                { "$ref": "date.json#" },
                { "$ref": "datetime.json#" },
                { "$ref": "nested-group.json#" },
                { "$ref": "label.json#" },
                { "$ref": "money.json#" },
                { "$ref": "number.json#" },
                { "$ref": "radio.json#" },
                { "$ref": "separator.json#" },
                { "$ref": "text.json#" },
                { "$ref": "textarea.json#" }
              ]
            }
          }
        }
      }
    },
    "conditions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "visibility": {
          "$ref": "../property/condition.json#/$defs/condition"
        }
      }
    }
  },
  "required": [
    "type",
    "tabs"
  ]
}