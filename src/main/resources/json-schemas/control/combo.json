{
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "combo"
      ]
    },
    "label": {
      "type": "string"
    },
    "property": {
      "type": "string",
      "pattern": "^[A-Za-z][A-Za-z0-9.]*$"
    },
    "required": {
      "type": "boolean"
    },
    "typeName": {
      "type": "string",
      "minLength": 1
    },
    "dictionary": {
      "type": "string",
      "minLength": 1
    },
    "sortByLabel": {
      "type": "boolean"
    }
  },
  "allOf": [
    {
      "required": [
        "type",
        "label",
        "property"
      ]
    },
    {
      "anyOf": [
        {
          "required": ["dictionary"],
          "not": { "required": ["typeName"] }
        },
        {
          "not": { "required": ["dictionary"] },
          "required": ["typeName"]
        },
        {
          "not": { "required": ["dictionary", "typeName"] }
        }
      ]
    }
  ]
}