{
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "email", "password", "text"
      ]
    },
    "label": {
      "type": "string"
    },
    "property": {
      "type": "string",
      "pattern": "^[A-Za-z][A-Za-z0-9.]*$"
    },
    "required": {
      "type": "boolean"
    },
    "pattern": {
      "type": "string",
      "minLength": 1
    },
    "minLength": {
      "type": "integer",
      "minimum": 0
    },
    "maxLength": {
      "type": "integer",
      "minimum": 0
    },
    "customValidation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "function": {
          "type": "string",
          "pattern": "^[_$a-zA-Z][_$a-zA-Z0-9]+$"
        },
        "message": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9 !?]+$"
        }
      }
    }
  },
  "required": [
    "type",
    "label",
    "property"
  ]
}