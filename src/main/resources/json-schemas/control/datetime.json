{
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "datetime"
      ]
    },
    "label": {
      "type": "string"
    },
    "property": {
      "type": "string"
    },
    "required": {
      "type": "boolean"
    },
    "min": {
      "type": "string",
      "pattern": "^[\\d]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][\\d]|3[0-2])T(0[1-9]|1[\\d]|2[0-3]):(0[1-9]|[1-5][\\d])$"
    },
    "max": {
      "type": "string",
      "pattern": "^[\\d]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][\\d]|3[0-2])T(0[1-9]|1[\\d]|2[0-3]):(0[1-9]|[1-5][\\d])$"
    },
    "step": {
      "type": "number",
      "minimum": 1
    },
    "customValidation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "function": {
          "type": "string",
          "pattern": "^[_$a-zA-Z][_$a-zA-Z0-9]+$"
        },
        "message": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9 !?]+$"
        }
      }
    }
