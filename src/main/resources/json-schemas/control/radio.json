{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Group of radio buttons allowing to select only one value from the group",
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "radio"
      ]
    },
    "label": {
      "type": "string"
    },
    "property": {
      "type": "string",
      "pattern": "^[a-zA-Z](?:[a-zA-Z\\d.]*[a-zA-Z\\d])?+$"
    },
    "required": {
      "type": "boolean"
    },
    "dictionary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "sortByLabel": {
          "type": "boolean"
        }
      }
    },
    "dynamic": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "typeName": {
          "type": "string",
          "minLength": 1
        },
        "qualification": {
          "$ref": "../property/constraints.json#/$defs/condition"
        }
      },
      "required": [
        "typeName"
      ]
    },
    "constraints": {
      "$ref": "../property/constraints.json#"
    }
  },
  "allOf": [
    {
      "required": [
        "type",
        "property"
      ]
    },
    {
      "oneOf": [
        {
          "required": ["dictionary"]
        },
        {
          "required": [
            "dynamic"
          ]
        },
        {
          "allOf": [
            {
              "not": {
                "required": [
                  "dynamic"
                ]
              }
            },
            {
              "not": { "required": ["dictionary"] }
            }
          ]
        }
      ]
    }
  ]
}