{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "Group of radio buttons allowing to select only one value from the group",
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "radio"
      ]
    },
    "label": {
      "type": "string"
    },
    "property": {
      "type": "string",
      "pattern": "^[a-zA-Z](?:[a-zA-Z\\d.]*[a-zA-Z\\d])?+$"
    },
    "required": {
      "type": "boolean"
    },
    "typeName": {
      "type": "string",
      "minLength": 1
    },
    "typeNameExpression": {
      "type": "string",
      "minLength": 1
    },
    "dictionary": {
      "type": "string",
      "minLength": 1
    },
    "sortByLabel": {
      "type": "boolean"
    },
    "constraints": {
      "$ref": "../property/constraints.json#"
    }
  },
  "allOf": [
    {
      "required": [
        "type",
        "property"
      ]
    },
    {
      "oneOf": [
        {
          "required": ["dictionary"]
        },
        {
          "required": ["typeName"]
        },
        {
          "required": ["typeNameExpression"]
        },
        {
          "allOf": [
            {
              "not": { "required": ["typeName"] }

            },{
              "not": { "required": ["typeNameExpression"] }

            },{
              "not": { "required": ["dictionary"] }

            }
          ]
        }
      ]
    }
  ]
}