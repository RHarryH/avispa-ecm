{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "number"
      ]
    },
    "label": {
      "type": "string"
    },
    "property": {
      "type": "string",
      "pattern": "^[A-Za-z][A-Za-z0-9.]*$"
    },
    "min": {
      "type": "number"
    },
    "max": {
      "type": "number"
    },
    "step": {
      "type": "number"
    },
    "customValidation": {
      "$ref": "../property/custom-validation.json#"
    }
  },
  "required": [
    "type",
    "label",
    "property"
  ]
}