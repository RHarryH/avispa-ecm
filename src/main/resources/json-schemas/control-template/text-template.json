{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "email", "password", "text"
      ]
    },
    "label": {
      "type": "string"
    },
    "property": {
      "type": "string",
      "pattern": "^[A-Za-z][A-Za-z0-9.]*$"
    },
    "pattern": {
      "type": "string",
      "minLength": 1
    },
    "minLength": {
      "type": "integer",
      "minimum": 0
    },
    "maxLength": {
      "type": "integer",
      "minimum": 0
    },
    "customValidation": {
      "$ref": "../property/custom-validation.json#"
    }
  },
  "required": [
    "type",
    "label",
    "property"
  ]
}