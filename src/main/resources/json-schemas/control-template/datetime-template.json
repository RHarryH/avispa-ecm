{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "datetime"
      ]
    },
    "label": {
      "type": "string"
    },
    "property": {
      "type": "string",
      "pattern": "^[A-Za-z][A-Za-z0-9.]*$"
    },
    "min": {
      "type": "string",
      "pattern": "^[\\d]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][\\d]|3[0-2])T(0[1-9]|1[\\d]|2[0-3]):(0[1-9]|[1-5][\\d])$"
    },
    "max": {
      "type": "string",
      "pattern": "^[\\d]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][\\d]|3[0-2])T(0[1-9]|1[\\d]|2[0-3]):(0[1-9]|[1-5][\\d])$"
    },
    "step": {
      "type": "number",
      "minimum": 1
    },
    "customValidation": {
      "$ref": "../property/custom-validation.json#"
    }
  },
  "required": [
    "type",
    "property"
  ]
}